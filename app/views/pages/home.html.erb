<div class="container">

<%= link_to "New Receipt", new_receipt_path, class: "btn btn-primary" %>
<%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
  <% @receipts.each do |receipt| %>
<div class="card m-3">
  <h5><%= receipt.amount %></h5>
  <h5><%= receipt.date %></h5>
  <h5><%= receipt.status %></h5>
  <h5><%= receipt.description %></h5>
  <%= receipt.department.name %>
</div>
  <% end %>

</div>
