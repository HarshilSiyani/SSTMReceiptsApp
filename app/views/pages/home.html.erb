

<%= link_to "New Receipt", new_receipt_path, class: "btn btn-primary" %>
<%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
<% @user_departments.each do |department| %>
<%= link_to "#{department.name}", department_path(department), class: "btn btn-primary" %>
<% end %>
<!-- Display each receipts of current user -->
<% @receipts.each do |receipt| %>
<% if receipt.status == "pending" %>
<div class="card bg-warning my-2 p-3">
  <% elsif receipt.status == "approved" %>
  <div class="card bg-success my-2 p-3">
    <% elsif receipt.status == "rejected" %>
    <div class="card bg-danger my-2 p-3">
      <% else %>
      <div class="card my-2 p-3">
        <% end %>
        <h5>$<%= receipt.amount %></h5>
        <h5><%= receipt.date %></h5>
        <h5><%= receipt.status %></h5>
        <h5><%= receipt.description %></h5>
        <%= receipt.department.name %>
      </div>
